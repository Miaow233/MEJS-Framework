{
  "compilerOptions": {
    "target": "ES6", // 目标语言的版本
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": false, // 允许 export = 导出，由import from 导入
    "pretty": true,
    "lib": ["ES2020"], // TS 需要引用的库

    "diagnostics": true, // 打印编译信息
    "allowJs": true, // 允许编译 JS 文件
    "checkJs": true, // 允许在 JS 文件中报错，通常与 allowJS 一起使用

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "module": "ES2020", // 模块类型
    "outDir": "dist" // 指定输出目录
  },
  "include": ["src"],
  "exclude": ["src/test"]
}
